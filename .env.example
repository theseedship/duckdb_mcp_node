# DuckDB Configuration
DUCKDB_MEMORY=4GB
DUCKDB_THREADS=4

# MCP Server Configuration
MCP_SERVER_NAME=duckdb-mcp-native
MCP_SERVER_VERSION=0.1.0
MCP_MODE=stdio

# Security Configuration
MCP_SECURITY_MODE=development
MCP_MAX_QUERY_SIZE=1000000
MCP_QUERY_TIMEOUT=30000

MCP_CACHE_DIR=/tmp/mcp-cache      # Cache directory
MCP_CACHE_TTL=300000               # 5 minutes TTL
MCP_CACHE_SIZE=104857600           # 100MB max cache
# Logging
LOG_LEVEL=info
LOG_FILE=logs/duckdb-mcp.log

# DuckPGQ Graph Extension Configuration
# Enable/disable DuckPGQ Property Graph extension loading
ENABLE_DUCKPGQ=true

# DuckPGQ source repository
# Options:
#   - community: Official DuckDB community repository (stable, awaiting 1.4.x release)
#   - edge: Edge/nightly builds for DuckDB 1.4.x compatibility (less stable, for testing)
#   - custom: Custom repository URL (specify in DUCKPGQ_CUSTOM_REPO)
DUCKPGQ_SOURCE=community

# Custom DuckPGQ repository URL (only used when DUCKPGQ_SOURCE=custom)
# Example: https://github.com/user/duckpgq-fork/releases/download/v0.1.0
DUCKPGQ_CUSTOM_REPO=

# Specific DuckPGQ version to install (optional, uses latest if not specified)
DUCKPGQ_VERSION=

# Strict mode: fail initialization if DuckPGQ cannot be loaded
# false (default): Gracefully continue without graph features if load fails
# true: Throw error and halt initialization if DuckPGQ load fails
DUCKPGQ_STRICT_MODE=false

# Allow unsigned extensions (required for DuckPGQ and community extensions)
ALLOW_UNSIGNED_EXTENSIONS=true

# Optional: S3/MinIO Configuration
# Dual endpoint architecture:
# - MINIO_PUBLIC_ENDPOINT: Used for local development (accessible from your machine)
# - MINIO_PRIVATE_ENDPOINT: Used in production/Railway (internal network communication)
# The service automatically selects the appropriate endpoint based on environment
MINIO_PUBLIC_ENDPOINT=https://s3-bucket.example.com:443  # External/public access
MINIO_PRIVATE_ENDPOINT=http://minio.internal:9000        # Internal/private access
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_USE_SSL=false  # Set to true for production
MINIO_REGION=us-east-1
BUCKET_NAME=duckdb-data